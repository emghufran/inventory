<h1>Listing mail_managers</h1>

<table>
  <tr>
    <th>Email</th><th>Role</th><th></th><th></th>
  </tr>

<% for mail_manager in @mail_managers %>
  <tr>
  	 <td><%= mail_manager.email %></td>
  	 <td><%= mail_manager.role %></td>
    <td><%= link_to 'Show', mail_manager %></td>
    <td><%= link_to 'Edit', edit_mail_manager_path(mail_manager) %></td>
    <td><%= link_to 'Destroy', mail_manager, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New mail_manager', new_mail_manager_path %>
