<h1>New mail_manager</h1>

<% form_for(@mail_manager) do |f| %>
  <%= f.error_messages %>
  <p><%= label_tag 'Email:' %>&nbsp;
  <%= f.text_field :email %></p>
  <p><%= label_tag 'Group:' %>&nbsp;<select name="mail_manager[role]">
  		<option value="Account Approval" selected>Account Approval</option>
  		<option value="Job Approval">Job Approval</option>
  		<option value="Inventory Managers">Inventory Managers</option>
		</select>  
  </p>
  <p>
    <%= f.submit "Create" %>
  </p><% end %>

<%= link_to 'Back', mail_managers_path %>
